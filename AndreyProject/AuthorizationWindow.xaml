<Window x:Class="AndreyProject.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndreyProject"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="177" Width="277" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Логин" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTB" Grid.Row="1" Margin="3" />
        <Label Content="Пароль" Grid.Row="2" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordPB" Grid.Row="3" Margin="3"/>
        <Button x:Name="LoginBt" Content="Войти" Grid.Row="4" Width="150" Margin="3" HorizontalAlignment="Left" IsDefault="True"/>
    </Grid>
</Window>
