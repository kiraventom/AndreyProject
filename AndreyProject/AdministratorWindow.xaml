<Window x:Class="AndreyProject.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndreyProject"
        mc:Ignorable="d"
        Title="AdministratorWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Пользователи">
                <DataGrid x:Name="UsersDG"/>
            </TabItem>
            <TabItem Header="Варьируемые параметры">
                <DataGrid x:Name="ParamsDG"/>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
